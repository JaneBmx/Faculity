<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>

    <session-config>
        <session-timeout>30</session-timeout>
    </session-config>


    <!--  SERVLET  -->
    <servlet>
        <servlet-name>Controller</servlet-name>
        <servlet-class>com.vlasova.controller.Controller</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Controller</servlet-name>
        <url-pattern>/controller</url-pattern>
    </servlet-mapping>

    <!--  FILTERS  -->
    <filter>
        <filter-name>EncodingFilter</filter-name>
        <filter-class>com.vlasova.filter.EncodingFilter</filter-class>
        <init-param>
            <param-name>encoding</param-name>
            <param-value>UTF-8</param-value>
        </init-param>
    </filter>
    <filter-mapping>
        <filter-name>EncodingFilter</filter-name>
        <url-pattern>/*</url-pattern>
<!--        <servlet-name>Controller</servlet-name>-->
    </filter-mapping>


    <filter>
        <filter-name>PageSecurityFilter</filter-name>
        <filter-class>com.vlasova.filter.PageSecurityFilter</filter-class>
        <init-param>
            <param-name>INDEX_PATH</param-name>
            <param-value>/index.jsp</param-value>
        </init-param>
    </filter>
    <filter-mapping>
        <filter-name>PageSecurityFilter</filter-name>
        <url-pattern>/jsp/admin/*</url-pattern>
        <url-pattern>/jsp/user/*</url-pattern>
    </filter-mapping>


