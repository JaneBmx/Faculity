<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>

    <session-config>
        <session-timeout>30</session-timeout>
    </session-config>


    <!--  SERVLET  -->
    <servlet>
        <servlet-name>Controller</servlet-name>
        <servlet-class>com.vlasova.controller.Controller</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Controller</servlet-name>
        <url-pattern>/controller</url-pattern>
    </servlet-mapping>

    <!--  FILTERS  -->
    <!--Encoding-->
    <filter>
        <filter-name>EncodingFilter</filter-name>
        <filter-class>com.vlasova.web.filter.EncodingFilter</filter-class>
        <init-param>
            <param-name>encoding</param-name>
            <param-value>UTF-8</param-value>
        </init-param>
    </filter>
    <filter-mapping>
        <filter-name>EncodingFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <!--access to user page. admin & user only-->
    <filter>
        <filter-name>UserFilter</filter-name>
        <filter-class>com.vlasova.web.filter.UserFilter</filter-class>
        <init-param>
            <param-name>INDEX_PATH</param-name>
            <param-value>/index.jsp</param-value>
        </init-param>
    </filter>
    <filter-mapping>
        <filter-name>UserFilter</filter-name>
        <url-pattern>/jsp/user/*</url-pattern>
    </filter-mapping>

    <!--access to admin page. admin only-->
    <filter>
        <filter-name>AdminFilter</filter-name>
        <filter-class>com.vlasova.web.filter.AdminFilter</filter-class>
        <init-param>
            <param-name>INDEX_PATH</param-name>
            <param-value>/index.jsp</param-value>
        </init-param>
    </filter>
    <filter-mapping>
        <filter-name>AdminFilter</filter-name>
        <url-pattern>/jsp/admin/*</url-pattern>
    </filter-mapping>

    <!-- every time when its going to execute some command -->
    <filter>
        <filter-name>CommandFilter</filter-name>
        <filter-class>com.vlasova.web.filter.CommandFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>CommandFilter</filter-name>
        <!--        <url-pattern>/*</url-pattern>-->
        <servlet-name>Controller</servlet-name>
        <url-pattern>/controller</url-pattern>
        <!--        <dispatcher>FORWARD</dispatcher>-->
    </filter-mapping>

    <jsp-config>
        <!-- IMPORT TAG  -->
        <taglib>
            <taglib-uri>customtags</taglib-uri>
            <taglib-location>/tag/tag.tld</taglib-location>
        </taglib>
        <!--  IMPORT META  -->
        <jsp-property-group>
            <url-pattern>*.jsp</url-pattern>
            <include-prelude>/include/meta.jsp</include-prelude>
            <include-coda>/include/meta.jsp</include-coda>
        </jsp-property-group>
    </jsp-config>

    <listener>
        <listener-class>com.vlasova.web.listener.Listener</listener-class>
    </listener>

    <error-page>
        <location>/jsp/error_page.jsp</location>
    </error-page>
</web-app>